<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAddress">

    <TextView
        android:id="@+id/text_postalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="290dp"
        android:text="우편 번호"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_postnum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="170dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_postalcode"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edge"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="50dp"
        android:text="우편번호 조회"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_postnum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="650dp"
        android:text="주소"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_postalcode" />

    <TextView
        android:id="@+id/text_queryaddress1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="650dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_address1"
        app:layout_constraintTop_toBottomOf="@id/text_postnum"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/edge"/>

    <TextView
        android:id="@+id/text_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="560dp"
        android:text="상세 주소"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_queryaddress2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address1"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/text_queryaddress2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:background="@drawable/edge"
        app:layout_constraintTop_toBottomOf="@id/text_queryaddress1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_address2"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="550dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>